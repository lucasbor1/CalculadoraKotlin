<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">
    
    <TextView
        android:id="@+id/expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:ellipsize="start"
        android:singleLine="true"
        android:text=""
        />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/limpar"
            style="@style/btn_operador"
            android:text="C"/>

        <TextView
            android:id="@+id/igual"
            style="@style/btn_operador"
            android:text="="/>


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/num_sete"
            style="@style/btn_numero"
            android:text="7"/>

        <TextView
            android:id="@+id/num_oito"
            style="@style/btn_numero"
            android:text="8"/>

        <TextView
            android:id="@+id/num_nove"
            style="@style/btn_numero"
            android:text="9"/>

        <TextView
            android:id="@+id/num_multi"
            style="@style/btn_operador"
            android:text="*"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/num_quatro"
            style="@style/btn_numero"
            android:text="4"/>

        <TextView
            android:id="@+id/num_cinco"
            style="@style/btn_numero"
            android:text="5"/>

        <TextView
            android:id="@+id/num_seis"
            style="@style/btn_numero"
            android:text="6"/>

        <TextView
            android:id="@+id/num_sub"
            style="@style/btn_operador"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/num_um"
            style="@style/btn_numero"
            android:text="1"/>

        <TextView
            android:id="@+id/num_dois"
            style="@style/btn_numero"
            android:text="2"/>

        <TextView
            android:id="@+id/num_tres"
            style="@style/btn_numero"
            android:text="3"/>

        <TextView
            android:id="@+id/num_soma"
            style="@style/btn_operador"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/num_ponto"
            style="@style/btn_numero"
            android:text="."/>

        <TextView
            android:id="@+id/num_zero"
            style="@style/btn_numero"
            android:text="0"/>

        <ImageView
            android:id="@+id/apagar"
            style="@style/btn_numero"
            android:src="@drawable/backspace"
            android:scaleType="center"/>


        <TextView
            android:id="@+id/div"
            style="@style/btn_operador"
            android:text="/"/>

    </LinearLayout>

</LinearLayout>
